<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E9E6CE"
    tools:context=".mvvm.view.test_drawable.TestDrawableActivity">

    <View
        android:id="@+id/tv_bg"
        android:layout_width="160dp"
        android:layout_height="36dp"
        android:layout_marginTop="100dp"
        android:background="@drawable/tv_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="取消"
        android:textColor="#FF0F2128"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@id/tv_bg"
        app:layout_constraintEnd_toEndOf="@id/tv_bg"
        app:layout_constraintStart_toStartOf="@id/tv_bg"
        app:layout_constraintTop_toTopOf="@id/tv_bg" />


    <ImageView
        android:id="@+id/button"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/ganup_emo_1"
        android:layout_marginStart="72dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="72dp"
        />

    <View
        android:id="@+id/target_view"
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:layout_marginBottom="72dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/button"
        android:layout_marginTop="20dp"
        />


</androidx.constraintlayout.widget.ConstraintLayout>